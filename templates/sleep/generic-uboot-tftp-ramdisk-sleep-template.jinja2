{% extends 'boot/generic-uboot-tftp-ramdisk-template.jinja2' %}
{% block actions %}
{{ super () }}

- test:
    timeout:
      minutes: 10
    definitions:
    - repository:
        metadata:
          format: Lava-Test Test Definition 1.0
          name: sleep
          description: "sleep test plan"
          os:
          - oe
          scope:
          - functional
        run:
          steps:
          - lava-test-case rtcwake-mem --shell rtcwake -d rtc0 -m mem -s 1
          - lava-test-case rtcwake-freeze --shell rtcwake -d rtc0 -m freeze -s 1
      from: inline
      name: sleep
      path: inline/sleep.yaml

{% endblock %}
